<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frases_aleatorias.MainPage">


    <Grid BackgroundColor="DarkOrange">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1">
                <GradientStopCollection>
                    <GradientStop Color="DarkOrange" Offset="0.0" />
                    <GradientStop Color="White" Offset="1.0" />
                    <GradientStop Color="DarkOrange" Offset="0.5" />
                    <GradientStop Color="DarkOrange" Offset="0.5" />
                </GradientStopCollection>
            </LinearGradientBrush>


        </Grid.Background>
        <Grid Margin="25" RowDefinitions=" .8* , .2* ">


            <Label FontSize="50" HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="White"
                   Text="Frases Aleatorias"
                   FontAttributes="Bold" />


            <Button x:Name="btnGetRandomPhrase"
                    Text="Obtener Frase"
                    HorizontalOptions="Center"
                    Opacity=".4"
                    VerticalOptions="Center"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="30"
                    Clicked="btnGetRandomPhrase_Clicked" />
        </Grid>


    </Grid>



</ContentPage>
